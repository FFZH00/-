/* pages/detail/detail.wxss */
page{
    height:100%;
  }
  .background {
    width: 100%;
    height: 100%;
    position:fixed; 
    background-size:100% 100%;
    z-index: -1;
  }
  
  .button{
    color: black;
    background-color: white;
  }
  .btn {
    margin-top: 10px;
    color: black;
    background-color: white;
    position: relative;
      z-index: 1;
  }
   
  .result-title {
    font-size: 16px;
    font-weight: bold;
    padding: 10px 0;
    font-family: '微软雅黑'；;
  }
   
  .result-content {
    border: 1px solid black;
    background-color: white;
    font-size: 14px;
    width: 100%;
    height: 800rpx;
  }
   
  .tips {
    color: red;
    font-size: 13px;
  }
  /* index.wxss */
  
  .showModule {
    /* 用样式控制隐藏  visibility: hidden;*//* flex 布局 */
    display: flex;
    justify-content: center;
    align-items: center;
    /* 生成绝对定位的元素，相对于浏览器窗口进行定位 */
    position: fixed;
    /* 如果 height,width 不变的情况下，left,top 不用修改 */
    left: 35%;
    top: 40%;
    height: 20vh;
    width: 30vw;
    /* 不透明 */
    /*opacity: 0.99;*/
    background-color: #7b7b7b;
    /* 圆角 */
    border-radius: 30rpx;
    position: absolute;
      z-index: 2;
  }
  .header {
    margin: 90rpx 0 90rpx 50rpx;
    border-bottom: 1px solid #ccc;
    text-align: center;
    width: 650rpx;
    height: 300rpx;
    line-height: 450rpx;
   }
    
   .header image {
    width: 200rpx;
    height: 200rpx;
   }
    
   .cont {
    margin-left: 50rpx;
    margin-bottom: 90rpx;
   }
    
   .cont text {
    display: block;
    color: #9d9d9d;
    margin-top: 40rpx;
   }
    
   .bottom {
    border-radius: 80rpx;
    margin: 70rpx 50rpx;
    font-size: 35rpx;
   }
  
  
  
  
  